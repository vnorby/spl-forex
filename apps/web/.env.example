# Solana RPC
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta

# Pyth oracle (no auth needed)
NEXT_PUBLIC_PYTH_HERMES_URL=https://hermes.pyth.network

# Helius RPC (optional — enables websocket subscriptions + faster RPC)
NEXT_PUBLIC_HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY

# Server-only API keys (proxied through /api/* routes — never exposed to client)
JUPITER_API_KEY=your-jupiter-api-key
HELIUS_API_KEY=your-helius-api-key
